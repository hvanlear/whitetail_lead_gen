---

<section class='listings-section py-5'>
  <div class='container'>
    <!-- Section Header - Desktop Version -->
    <div
      class='section-header d-none d-md-flex justify-content-between align-items-start mb-4'
    >
      <div>
        <h2 class='display-5 fw-bold mb-1'>Featured Properties</h2>
        <p class='text-muted mb-0'>
          See how we advertise our clients properties
        </p>
      </div>
      <a href='#' class='view-all-link text-decoration-none'>
        View All <span class='ms-1'>→</span>
      </a>
    </div>

    <!-- Section Header - Mobile Version (matches the design) -->
    <div class='section-header-mobile d-md-none mb-4'>
      <h2 class='fw-bold mb-2'>Featured Properties</h2>
      <p class='text-muted mb-2'>See how we advertise our clients properties</p>
      <a href='#' class='view-all-mobile text-decoration-none'>
        View All <span class='view-arrow'>→</span>
      </a>
    </div>

    <!-- Property Listings Grid -->
    <div class='row'>
      {
        propertyListings.map((property) => (
          <div class='col-md-6 col-lg-3'>
            <PropertyCard
              imageUrl={property.imageUrl}
              price={property.price}
              acres={property.acres}
              county={property.county}
              city={property.city}
              state={property.state}
              zipCode={property.zipCode}
              isNew={property.isNew}
            />
          </div>
        ))
      }
    </div>

    <!-- Optional: Load More Button -->
    <div class='text-center mt-4'>
      <button class='btn btn-outline-secondary px-4 py-2'>
        Load More Properties
      </button>
    </div>
  </div>
</section>

<style>
  .view-all-link {
    color: #0d6efd;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .view-all-link:hover {
    color: #0a58ca;
  }

  @media (max-width: 767.98px) {
    h2.display-5 {
      font-size: 2.5rem;
    }
  }
</style>
