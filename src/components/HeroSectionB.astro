<!-- Version B - Combined Hero/Video Section (Zillow Style) -->
<section class='hero-video-section'>
  <!-- Banner Header -->
  <div class='banner-header'>
    <div class='container'>
      <div class='text-center py-4'>
        <h2 class='banner-title text-white text-uppercase mb-0'>
          Maximize Your Lands Value
        </h2>
      </div>
    </div>
  </div>

  <div class='container py-5'>
    <div class='row'>
      <!-- Left Column - Title and Video -->
      <div class='col-lg-7 mb-5 mb-lg-0'>
        <!-- Pill Button -->
        <div class='mb-3'>
          <a href='#' class='btn btn-outline-dark rounded-pill'
            >Whitetail Properties Overview</a
          >
        </div>

        <!-- Main Heading -->
        <h1 class='display-4 fw-bold mb-4'>
          Use Whitetail Properties to help win more listings in your market
        </h1>

        <!-- Subtitle Text -->
        <p class='lead mb-5'>
          Agents using Whitetail Properties on the majority of their listings
          are winning 30% more listings than similar Non-Whitetail Agents<sup
            >*</sup
          >
        </p>

        <!-- Video Player with Play Button -->
        <div
          class='video-container position-relative mb-4 rounded overflow-hidden shadow'
        >
          <img
            src='/images/video-thumbnail.jpg'
            alt='Property Marketing Video'
            class='img-fluid w-100'
          />
          <button class='play-button btn btn-light rounded-circle'>
            <i class='bi bi-play-fill fs-4'></i>
          </button>
        </div>
      </div>

      <!-- Right Column - Form -->
      <div class='col-lg-5'>
        <div class='form-container bg-white p-4 rounded shadow'>
          <h3 class='h4 mb-4'>
            See how Whitetail Properties can help you win 30% more listings in
            your market
          </h3>

          <form>
            <!-- First Name -->
            <div class='mb-3'>
              <label for='firstName' class='form-label'>First name*</label>
              <input
                type='text'
                class='form-control form-control-lg'
                id='firstName'
                required
              />
            </div>

            <!-- Last Name -->
            <div class='mb-3'>
              <label for='lastName' class='form-label'>Last name*</label>
              <input
                type='text'
                class='form-control form-control-lg'
                id='lastName'
                required
              />
            </div>

            <!-- Email -->
            <div class='mb-3'>
              <label for='email' class='form-label'>Email*</label>
              <input
                type='email'
                class='form-control form-control-lg'
                id='email'
                required
              />
            </div>

            <!-- Phone Number -->
            <div class='mb-3'>
              <label for='phone' class='form-label'>Phone Number*</label>
              <div class='row g-0'>
                <div class='col-4 col-md-3'>
                  <select class='form-select form-select-lg' id='countryCode'>
                    <option value='US'>United States</option>
                  </select>
                </div>
                <div class='col-8 col-md-9'>
                  <input
                    type='tel'
                    class='form-control form-control-lg'
                    id='phone'
                    placeholder='+1'
                    required
                  />
                </div>
              </div>
            </div>

            <!-- Postal Code -->
            <div class='mb-3'>
              <label for='postalCode' class='form-label'>Postal Code*</label>
              <input
                type='text'
                class='form-control form-control-lg'
                id='postalCode'
                required
              />
            </div>

            <!-- Average Listings -->
            <div class='mb-3'>
              <label for='avgListings' class='form-label'
                >Avg. Listings per Year*</label
              >
              <select
                class='form-select form-select-lg'
                id='avgListings'
                required
              >
                <option value='' selected>Please Select</option>
                <option value='1-5'>1-5</option>
                <option value='6-10'>6-10</option>
                <option value='11-20'>11-20</option>
                <option value='21+'>21+</option>
              </select>
            </div>

            <!-- Consent Checkbox -->
            <div class='mb-4 form-check'>
              <input
                type='checkbox'
                class='form-check-input'
                id='consent'
                required
              />
              <label class='form-check-label small' for='consent'>
                By checking the box, you expressly consent to Whitetail
                Properties directly or by third parties acting on its behalf
                sending marketing messages (including text messages using
                automated technology) to the telephone number you provide.
              </label>
            </div>

            <!-- Submit Button -->
            <div class='d-grid'>
              <button type='submit' class='btn btn-primary btn-lg submit-btn'
                >Request Information</button
              >
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

